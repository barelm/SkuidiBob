<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.barmen.myapplication.MapsActivity" />

    <ImageButton
        android:id="@+id/btnReportPopup"
        android:background="@drawable/ic_new_umbrella"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onOpenReportPopup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btnSettingsPopup"
        android:background="@drawable/ic_settings"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onOpenSettingsPopup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>