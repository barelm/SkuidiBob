<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.barmen.myapplication.MapsActivity" />

    <ImageButton
        android:id="@+id/btnReportPopup"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onOpenReportPopup"
        android:src="@mipmap/umbrella"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btnSettingsPopup"
        android:background="@android:color/white"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:onClick="onOpenSettingsPopup"
        android:src="@drawable/ic_settings"
        android:layout_toLeftOf="@id/btnReportPopup"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>